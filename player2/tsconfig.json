{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "jsxFactory": "h",
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}
